<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.timetable" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true" >
        <activity
            android:name="com.example.timetable.ui.activities.SplashScreenActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.timetable.ui.activities.SettingsActivity"
            android:exported="true"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.TimeTable.Indigo_100"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.timetable.ui.activities.UpdateActivity"
            android:exported="true"
            android:theme="@style/Theme.TimeTable.Indigo_100"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.timetable.ui.activities.AddActivity"
            android:exported="true"
            android:theme="@style/Theme.TimeTable.Indigo_100"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.timetable.ui.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TimeTable.Indigo_100"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.timetable.ui.activities.TableParametersActivity"
            android:exported="true"
            android:theme="@style/Theme.TimeTable.Indigo_100">
        </activity>
    </application>

</manifest>