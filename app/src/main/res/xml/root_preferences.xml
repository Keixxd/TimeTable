<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/notifications_settings_header">

        <SwitchPreference
            android:defaultValue="false"
            android:key="notifications_preference"
            android:title="Получать оповещения"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/themes_settings_header">

        <ListPreference
            app:defaultValue="indigo_100"
            app:entries="@array/themes_names"
            app:entryValues="@array/themes_names_values"
            app:summary="Изменяет цвет интерфейса"
            app:key="theme_preference"
            app:title="Цвет оформления"/>
    </PreferenceCategory>

</PreferenceScreen>